
<% unless @category.errors.empty? %>
	<div id="error"> <%= @category.errors.full_messages %> </div> <br/>
<% end %>


<%=  form_for @category ,:remote => true do |cat|%>

	<%= cat.label :name  %>

	<%= cat.text_field :name %>

	<%= cat.submit %>

<% end %>



<%= link_to 'Back to Categories' , categories_path %>