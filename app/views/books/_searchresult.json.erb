
<% json = [] %>
<%   @result.each do |res| %>
	
	<% authors = [] %> 

	<% res.authors.each do |auth|%>
		<% authors.push(auth.name) %>
	<% end %>

 	<%  json.push({
		'title' => res.title,
		'price' => res.price,
		 'authors' => authors.join(", "),
		 'id' => res.id


	}) %>


<% end %>

<%= json.to_json.html_safe %>