
<% unless @user.errors.empty? %>
	<div id="error"> <%= @user.errors.full_messages %> </div> <br/>
<% end %>


<%= form_for @user , :remote => true do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %> <br/>

	<%= f.label :regno %>
	<%= f.text_field :regno %> <br/>

	<%= f.label :limit %>
	<%= f.text_field :limit   %> <br/>

	<%= f.submit  %>

<% end %>

<%= link_to 'Back to Users' ,users_path %>