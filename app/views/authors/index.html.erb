
	<h2> Existing Authors </h2>

	<%= link_to 'Add Author' , new_author_path %>

	<% getAuthors.each do |author| %>
		<li > <%= link_to author.name , author_path(author)  %> 
			<%= link_to "edit" ,edit_author_path(author) %>

			<%= link_to "delete" ,author_path(author) ,:method => :delete %> </li>
	<% end %>